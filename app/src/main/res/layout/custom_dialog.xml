<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_location_method"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textGray"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/cultured_s"
            android:id="@+id/currentLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_location"
            android:textColor="@color/textGray"
            app:icon="@drawable/location_on"
            app:iconGravity="textStart"
            app:iconTint="@color/textGray"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/cultured_s"
            android:id="@+id/manualSearchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_manually"
            android:textColor="@color/textGray"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconTint="@color/textGray"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>